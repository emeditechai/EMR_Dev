@model IEnumerable<EMR.Web.Models.ViewModels.AccessListItemViewModel>
@{
    ViewData["Title"] = "Branch-wise Role Mapping";
}

<h1 class="h3 mb-3">User Role Mapping (Branch Wise)</h1>

<div class="card-soft p-3 table-responsive">
    <table class="table table-hover align-middle mb-0">
        <thead>
            <tr>
                <th>Username</th>
                <th>Full Name</th>
                <th>Mapping Summary</th>
                <th class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Username</td>
                    <td>@item.FullName</td>
                    <td>@item.BranchRoleSummary</td>
                    <td class="text-end">
                        <a asp-action="Assign" asp-route-userId="@item.UserId" class="btn btn-sm btn-outline-primary">Assign Roles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
