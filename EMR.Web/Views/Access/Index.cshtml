@model IEnumerable<EMR.Web.Models.ViewModels.AccessListItemViewModel>
@{
    ViewData["Title"] = "Branch-wise Role Mapping";
    var total    = Model.Count();
    var assigned = Model.Count(x => !string.IsNullOrWhiteSpace(x.BranchRoleSummary));
    var unassigned = total - assigned;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 fw-bold">User Role Mapping</h1>
        <small class="text-muted">Assign roles to users across branches</small>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-sm-4">
        <div class="stat-card stat-blue">
            <div class="stat-icon"><i class="bi bi-people-fill"></i></div>
            <div>
                <div class="stat-value">@total</div>
                <div class="stat-label">Total Users</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="stat-card stat-green">
            <div class="stat-icon"><i class="bi bi-shield-check"></i></div>
            <div>
                <div class="stat-value">@assigned</div>
                <div class="stat-label">Roles Assigned</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="stat-card stat-yellow">
            <div class="stat-icon"><i class="bi bi-shield-exclamation"></i></div>
            <div>
                <div class="stat-value">@unassigned</div>
                <div class="stat-label">Pending Assignment</div>
            </div>
        </div>
    </div>
</div>

<div class="dashboard-panel table-responsive">
    <table class="table table-hover align-middle mb-0">
        <thead>
            <tr>
                <th>Username</th>
                <th>Full Name</th>
                <th>Mapping Summary</th>
                <th class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-semibold">@item.Username</td>
                    <td>@item.FullName</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(item.BranchRoleSummary))
                        {
                            <span class="text-success small">@item.BranchRoleSummary</span>
                        }
                        else
                        {
                            <span class="text-muted fst-italic small">No roles assigned</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Assign" asp-route-userId="@item.UserId" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-shield-plus me-1"></i>Assign Roles
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr><td colspan="4" class="text-center text-muted py-4"><i class="bi bi-shield-x fs-3 d-block mb-2"></i>No users found.</td></tr>
            }
        </tbody>
    </table>
</div>
