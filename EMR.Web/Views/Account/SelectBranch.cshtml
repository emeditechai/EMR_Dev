@model EMR.Web.Models.ViewModels.BranchSelectionViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Select Branch";
}

<div class="auth-card">
    <div class="row g-0">
        <div class="col-lg-6 auth-left d-none d-lg-block">
            <h1 class="display-5 fw-bold mb-4">Welcome, @Model.DisplayName!</h1>
            <p class="fs-5 mb-4">Your credentials have been verified. Select the branch you want to access for this session.</p>
            <ul class="list-unstyled fs-5">
                <li class="mb-2">● Credentials verified</li>
                <li class="mb-2">● Multi-branch access</li>
                <li class="mb-2">● Secure branch session</li>
                <li class="mb-2">● Branch-specific data visibility</li>
            </ul>
        </div>
        <div class="col-12 col-lg-6 auth-right">
            <h2 class="brand-title mb-3">eMedi<span>EMR</span></h2>
            <h3 class="h2 mb-4">Select Branch</h3>

            <form asp-action="SelectBranch" method="post" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-4">
                    <label asp-for="BranchId" class="form-label"></label>
                    <select asp-for="BranchId" asp-items="Model.Branches" class="form-select form-select-lg">
                        <option value="">-- Select Branch --</option>
                    </select>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-lg w-100 text-white" style="background: var(--emr-gradient)">Continue to Dashboard</button>
            </form>

            <form asp-controller="Account" asp-action="Logout" method="post" class="mt-3 text-center">
                @Html.AntiForgeryToken()
                <button class="btn btn-link text-decoration-none" type="submit">Back to Login</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
