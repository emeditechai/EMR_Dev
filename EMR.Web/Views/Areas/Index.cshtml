@model IEnumerable<EMR.Web.Models.Entities.AreaMaster>
@{
    ViewData["Title"] = "Area Master";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 m-0">Area Master</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Add Area
    </a>
</div>

<div class="card-soft p-3 table-responsive">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Code</th>
                <th>Area Name</th>
                <th>City</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td><code>@item.AreaCode</code></td>
                    <td>@item.AreaName</td>
                    <td>@(item.City?.CityName ?? "â€”")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge text-bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge text-bg-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.AreaId" class="btn btn-sm btn-outline-secondary me-1" title="Details">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.AreaId" class="btn btn-sm btn-outline-primary" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr><td colspan="6" class="text-center text-muted py-4">No areas found.</td></tr>
            }
        </tbody>
    </table>
</div>
