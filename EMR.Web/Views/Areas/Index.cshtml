@model IEnumerable<EMR.Web.Models.Entities.AreaMaster>
@{
    ViewData["Title"] = "Area Master";
    var countries    = ViewBag.Countries  as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    var states       = ViewBag.States     as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    var districts    = ViewBag.Districts  as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    var cities       = ViewBag.Cities     as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    int? selCountry  = ViewBag.SelectedCountryId;
    int? selState    = ViewBag.SelectedStateId;
    int? selDistrict = ViewBag.SelectedDistrictId;
    int? selCity     = ViewBag.SelectedCityId;
    var total        = Model.Count();
    var active       = Model.Count(x => x.IsActive);
    var inactive     = total - active;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 fw-bold">Area Master</h1>
        <small class="text-muted">Manage locality areas within cities</small>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Add Area
    </a>
</div>

<div class="row g-3 mb-4">
    <div class="col-sm-4">
        <div class="kpi-card kpi-blue d-flex align-items-center gap-3">
            <i class="bi bi-pin-map-fill fs-2"></i>
            <div><h2 class="mb-0">@total</h2><small>Total Areas</small></div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="kpi-card kpi-green d-flex align-items-center gap-3">
            <i class="bi bi-check-circle fs-2"></i>
            <div><h2 class="mb-0">@active</h2><small>Active</small></div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="kpi-card kpi-red d-flex align-items-center gap-3">
            <i class="bi bi-x-circle fs-2"></i>
            <div><h2 class="mb-0">@inactive</h2><small>Inactive</small></div>
        </div>
    </div>
</div>

@* Filter Panel *@
<div class="dashboard-panel mb-3">
    <form method="get" asp-action="Index" id="filterForm">
        <div class="row g-2 align-items-end">
            <div class="col-md-3 col-lg-2">
                <label class="form-label small text-muted mb-1"><i class="bi bi-globe me-1"></i>Country</label>
                <select id="fCountry" name="countryId">
                    <option value="">All Countries</option>
                    @foreach (var c in countries)
                    {
                        if (c.Selected) { <option value="@c.Value" selected="selected">@c.Text</option> }
                        else { <option value="@c.Value">@c.Text</option> }
                    }
                </select>
            </div>
            <div class="col-md-3 col-lg-2">
                <label class="form-label small text-muted mb-1"><i class="bi bi-map me-1"></i>State</label>
                <select id="fState" name="stateId">
                    <option value="">All States</option>
                    @foreach (var s in states)
                    {
                        if (s.Selected) { <option value="@s.Value" selected="selected">@s.Text</option> }
                        else { <option value="@s.Value">@s.Text</option> }
                    }
                </select>
            </div>
            <div class="col-md-3 col-lg-2">
                <label class="form-label small text-muted mb-1"><i class="bi bi-geo me-1"></i>District</label>
                <select id="fDistrict" name="districtId">
                    <option value="">All Districts</option>
                    @foreach (var d in districts)
                    {
                        if (d.Selected) { <option value="@d.Value" selected="selected">@d.Text</option> }
                        else { <option value="@d.Value">@d.Text</option> }
                    }
                </select>
            </div>
            <div class="col-md-3 col-lg-2">
                <label class="form-label small text-muted mb-1"><i class="bi bi-buildings me-1"></i>City</label>
                <select id="fCity" name="cityId">
                    <option value="">All Cities</option>
                    @foreach (var c in cities)
                    {
                        if (c.Selected) { <option value="@c.Value" selected="selected">@c.Text</option> }
                        else { <option value="@c.Value">@c.Text</option> }
                    }
                </select>
            </div>
            <div class="col-md-auto d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-funnel me-1"></i>Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
            @if (selCountry.HasValue || selState.HasValue || selDistrict.HasValue || selCity.HasValue)
            {
                <div class="col-md-auto">
                    <span class="badge text-bg-info py-2 px-3">
                        <i class="bi bi-table me-1"></i>@Model.Count() record(s)
                    </span>
                </div>
            }
        </div>
    </form>
</div>

<div class="dashboard-panel table-responsive">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Code</th>
                <th>Area Name</th>
                <th>City</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-muted small">@(i++)</td>
                    <td><code>@item.AreaCode</code></td>
                    <td class="fw-semibold">@item.AreaName</td>
                    <td>@(item.City?.CityName ?? "â€”")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge text-bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge text-bg-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.AreaId" class="btn btn-sm btn-outline-secondary me-1" title="Details">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.AreaId" class="btn btn-sm btn-outline-primary" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr><td colspan="6" class="text-center text-muted py-4"><i class="bi bi-pin-map fs-3 d-block mb-2"></i>No areas found.</td></tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.bootstrap5.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>
    <script>
        const tsCountry = new TomSelect('#fCountry', {
            placeholder: 'Search country...', allowEmptyOption: true,
            onChange: function (val) {
                tsState.clear(); tsState.clearOptions();
                tsState.addOption({ value: '', text: 'All States' });
                tsDistrict.clear(); tsDistrict.clearOptions();
                tsDistrict.addOption({ value: '', text: 'All Districts' });
                tsCity.clear(); tsCity.clearOptions();
                tsCity.addOption({ value: '', text: 'All Cities' });
                if (!val) return;
                fetch(`/States/GetByCountry?countryId=${val}`)
                    .then(r => r.json())
                    .then(data => {
                        data.forEach(s => tsState.addOption({ value: s.stateId, text: s.stateName }));
                        tsState.refreshOptions(false);
                    });
            }
        });
        const tsState = new TomSelect('#fState', {
            placeholder: 'Search state...', allowEmptyOption: true,
            onChange: function (val) {
                tsDistrict.clear(); tsDistrict.clearOptions();
                tsDistrict.addOption({ value: '', text: 'All Districts' });
                tsCity.clear(); tsCity.clearOptions();
                tsCity.addOption({ value: '', text: 'All Cities' });
                if (!val) return;
                fetch(`/Districts/GetByState?stateId=${val}`)
                    .then(r => r.json())
                    .then(data => {
                        data.forEach(d => tsDistrict.addOption({ value: d.districtId, text: d.districtName }));
                        tsDistrict.refreshOptions(false);
                    });
            }
        });
        const tsDistrict = new TomSelect('#fDistrict', {
            placeholder: 'Search district...', allowEmptyOption: true,
            onChange: function (val) {
                tsCity.clear(); tsCity.clearOptions();
                tsCity.addOption({ value: '', text: 'All Cities' });
                if (!val) return;
                fetch(`/Cities/GetByDistrict?districtId=${val}`)
                    .then(r => r.json())
                    .then(data => {
                        data.forEach(c => tsCity.addOption({ value: c.cityId, text: c.cityName }));
                        tsCity.refreshOptions(false);
                    });
            }
        });
        const tsCity = new TomSelect('#fCity', {
            placeholder: 'Search city...', allowEmptyOption: true,
            onChange: function () { document.getElementById('filterForm').submit(); }
        });
    </script>
}
