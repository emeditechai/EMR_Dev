@model IEnumerable<EMR.Web.Models.Entities.BranchMaster>
@{
    ViewData["Title"] = "Branch Master";
    var total    = Model.Count();
    var active   = Model.Count(x => x.IsActive);
    var inactive = total - active;
    var ho       = Model.Count(x => x.IsHOBranch);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 fw-bold">Branch Master</h1>
        <small class="text-muted">Manage and configure all hospital branches</small>
    </div>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-building-add me-1"></i>Add Branch</a>
</div>

<div class="row g-3 mb-4">
    <div class="col-sm-6 col-xl-3">
        <div class="stat-card stat-blue">
            <div class="stat-icon"><i class="bi bi-building-fill"></i></div>
            <div>
                <div class="stat-value">@total</div>
                <div class="stat-label">Total Branches</div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="stat-card stat-green">
            <div class="stat-icon"><i class="bi bi-check-circle-fill"></i></div>
            <div>
                <div class="stat-value">@active</div>
                <div class="stat-label">Active</div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="stat-card stat-red">
            <div class="stat-icon"><i class="bi bi-x-circle-fill"></i></div>
            <div>
                <div class="stat-value">@inactive</div>
                <div class="stat-label">Inactive</div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="stat-card stat-yellow">
            <div class="stat-icon"><i class="bi bi-star-fill"></i></div>
            <div>
                <div class="stat-value">@ho</div>
                <div class="stat-label">Head Office</div>
            </div>
        </div>
    </div>
</div>

<div class="dashboard-panel table-responsive">
    <table class="table table-hover align-middle mb-0">
        <thead>
            <tr>
                <th>Branch Name</th>
                <th>Code</th>
                <th>Location</th>
                <th>HO</th>
                <th>Status</th>
                <th class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in Model)
            {
                <tr>
                    <td class="fw-semibold">@branch.BranchName</td>
                    <td><code>@branch.BranchCode</code></td>
                    <td>@string.Join(", ", new[] { branch.City, branch.State, branch.Country }.Where(x => !string.IsNullOrWhiteSpace(x)))</td>
                    <td>
                        @if (branch.IsHOBranch)
                        {
                            <span class="badge text-bg-warning">HO</span>
                        }
                        else
                        {
                            <span class="text-muted">â€”</span>
                        }
                    </td>
                    <td>
                        @if (branch.IsActive)
                        {
                            <span class="badge text-bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge text-bg-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@branch.BranchId" class="btn btn-sm btn-outline-secondary" title="View"><i class="bi bi-eye-fill"></i></a>
                        <a asp-action="Edit" asp-route-id="@branch.BranchId" class="btn btn-sm btn-outline-primary ms-1">Edit</a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr><td colspan="6" class="text-center text-muted py-4"><i class="bi bi-building-x fs-3 d-block mb-2"></i>No branches found.</td></tr>
            }
        </tbody>
    </table>
</div>
