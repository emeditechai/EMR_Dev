@model EMR.Web.Models.ViewModels.DistrictFormViewModel
@{
    ViewData["Title"] = "Edit District";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 m-0">Edit District</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back
    </a>
</div>

<div class="card-soft p-4">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="DistrictId" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

        <div class="row g-3">
            <div class="col-md-4">
                <label asp-for="CountryId" class="form-label">Country <span class="text-danger">*</span></label>
                <select asp-for="CountryId" asp-items="Model.Countries" class="form-select" id="CountryId">
                    <option value="">-- Select Country --</option>
                </select>
            </div>
            <div class="col-md-4">
                <label asp-for="StateId" class="form-label">State <span class="text-danger">*</span></label>
                <select asp-for="StateId" asp-items="Model.States" class="form-select" id="StateId">
                    <option value="">-- Select State --</option>
                </select>
                <span asp-validation-for="StateId" class="text-danger small"></span>
            </div>
            <div class="col-md-2">
                <label asp-for="DistrictCode" class="form-label">District Code <span class="text-danger">*</span></label>
                <input asp-for="DistrictCode" class="form-control text-uppercase" maxlength="10" />
                <span asp-validation-for="DistrictCode" class="text-danger small"></span>
            </div>
            <div class="col-md-2">
                <label asp-for="DistrictName" class="form-label">District Name <span class="text-danger">*</span></label>
                <input asp-for="DistrictName" class="form-control" maxlength="100" />
                <span asp-validation-for="DistrictName" class="text-danger small"></span>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i>Update
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        document.getElementById('CountryId').addEventListener('change', function () {
            const countryId = this.value;
            const stateSelect = document.getElementById('StateId');
            stateSelect.innerHTML = '<option value="">-- Select State --</option>';
            if (!countryId) return;
            fetch(`/States/GetByCountry?countryId=${countryId}`)
                .then(r => r.json())
                .then(data => {
                    data.forEach(s => {
                        const opt = document.createElement('option');
                        opt.value = s.stateId; opt.text = s.stateName;
                        stateSelect.appendChild(opt);
                    });
                });
        });
    </script>
}
