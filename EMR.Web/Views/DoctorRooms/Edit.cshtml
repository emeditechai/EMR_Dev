@model EMR.Web.Models.ViewModels.DoctorRoomFormViewModel
@{
    ViewData["Title"] = "Edit Doctor Room";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 fw-bold">Edit Doctor Room</h1>
        <small class="text-muted">Update room details</small>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="dashboard-panel" style="max-width:560px;">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="RoomId" type="hidden" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="FloorId" class="form-label fw-semibold">
                Floor <span class="text-danger">*</span>
            </label>
            <select asp-for="FloorId" asp-items="Model.FloorOptions" class="form-select">
                <option value="">-- Select Floor --</option>
            </select>
            <span asp-validation-for="FloorId" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RoomName" class="form-label fw-semibold">
                Room Name <span class="text-danger">*</span>
            </label>
            <input asp-for="RoomName" class="form-control" maxlength="10" />
            <span asp-validation-for="RoomName" class="text-danger small"></span>
        </div>

        <div class="mb-4">
            <div class="form-check form-switch">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save me-1"></i>Update
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts { @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } }
