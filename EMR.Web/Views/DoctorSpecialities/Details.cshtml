@model EMR.Web.Models.Entities.DoctorSpecialityMaster
@{
    ViewData["Title"] = "Speciality Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 fw-bold">Speciality Details</h1>
        <small class="text-muted">Viewing: @Model.SpecialityName</small>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.SpecialityId" class="btn btn-outline-primary">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>
</div>

<div class="dashboard-panel" style="max-width:560px;">
    <div class="row g-4">
        <div class="col-12">
            <p class="text-muted small mb-1">Speciality Name</p>
            <p class="fw-semibold fs-5 mb-0">
                <i class="bi bi-award text-primary me-2"></i>@Model.SpecialityName
            </p>
        </div>
        <div class="col-sm-6">
            <p class="text-muted small mb-1">Status</p>
            @if (Model.IsActive)
            {
                <span class="badge text-bg-success px-3 py-2">Active</span>
            }
            else
            {
                <span class="badge text-bg-secondary px-3 py-2">Inactive</span>
            }
        </div>
        <div class="col-sm-6">
            <p class="text-muted small mb-1">Created On</p>
            <p class="fw-semibold mb-0">@Model.CreatedDate.ToString("dd MMM yyyy, HH:mm") UTC</p>
        </div>
        @if (Model.ModifiedDate.HasValue)
        {
            <div class="col-sm-6">
                <p class="text-muted small mb-1">Last Modified</p>
                <p class="fw-semibold mb-0">@Model.ModifiedDate.Value.ToString("dd MMM yyyy, HH:mm") UTC</p>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete" asp-route-id="@Model.SpecialityId" method="post"
          onsubmit="return confirm('Delete \'@Model.SpecialityName\'? This cannot be undone.');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-danger btn-sm">
            <i class="bi bi-trash me-1"></i>Delete Speciality
        </button>
    </form>
</div>
