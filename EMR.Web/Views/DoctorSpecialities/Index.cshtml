@model IEnumerable<EMR.Web.Models.Entities.DoctorSpecialityMaster>
@{
    ViewData["Title"] = "Doctor Speciality Master";
    var total    = Model.Count();
    var active   = Model.Count(x => x.IsActive);
    var inactive = total - active;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 fw-bold">Doctor Speciality Master</h1>
        <small class="text-muted">Manage medical specialities for doctors</small>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Add Speciality
    </a>
</div>

<div class="row g-3 mb-4">
    <div class="col-sm-4">
        <div class="stat-card stat-blue">
            <div class="stat-icon"><i class="bi bi-award-fill"></i></div>
            <div>
                <div class="stat-value">@total</div>
                <div class="stat-label">Total Specialities</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="stat-card stat-green">
            <div class="stat-icon"><i class="bi bi-check-circle-fill"></i></div>
            <div>
                <div class="stat-value">@active</div>
                <div class="stat-label">Active</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="stat-card stat-red">
            <div class="stat-icon"><i class="bi bi-x-circle-fill"></i></div>
            <div>
                <div class="stat-value">@inactive</div>
                <div class="stat-label">Inactive</div>
            </div>
        </div>
    </div>
</div>

<div class="dashboard-panel table-responsive">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Speciality Name</th>
                <th>Status</th>
                <th>Created</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-muted small">@(i++)</td>
                    <td class="fw-semibold">
                        <i class="bi bi-award text-primary me-2"></i>@item.SpecialityName
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge text-bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge text-bg-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-muted small">@item.CreatedDate.ToString("dd MMM yyyy")</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.SpecialityId"
                           class="btn btn-sm btn-outline-secondary me-1" title="View Details">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.SpecialityId"
                           class="btn btn-sm btn-outline-primary" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-5">
                        <i class="bi bi-award fs-2 d-block mb-2 opacity-50"></i>
                        No specialities found. <a asp-action="Create">Add one now.</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
