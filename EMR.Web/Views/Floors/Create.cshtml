@model EMR.Web.Models.ViewModels.FloorFormViewModel
@{
    ViewData["Title"] = "Add Floor";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 fw-bold">Add Floor</h1>
        <small class="text-muted">Create a new floor record</small>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="dashboard-panel" style="max-width:600px;">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

        <div class="row g-3 mb-3">
            <div class="col-sm-4">
                <label asp-for="FloorCode" class="form-label fw-semibold">
                    Floor Code <span class="text-danger">*</span>
                </label>
                <input asp-for="FloorCode" class="form-control text-uppercase"
                       maxlength="20" placeholder="e.g. F1" autofocus
                       oninput="this.value=this.value.toUpperCase()" />
                <span asp-validation-for="FloorCode" class="text-danger small"></span>
            </div>
            <div class="col-sm-8">
                <label asp-for="FloorName" class="form-label fw-semibold">
                    Floor Name <span class="text-danger">*</span>
                </label>
                <input asp-for="FloorName" class="form-control"
                       maxlength="100" placeholder="e.g. First Floor" />
                <span asp-validation-for="FloorName" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-4">
            <div class="form-check form-switch">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" checked />
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save me-1"></i>Save
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts { @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } }
