@model EMR.Web.Models.ViewModels.HospitalSettingsViewModel
@{
    ViewData["Title"] = "Hospital Settings";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div class="d-flex align-items-center gap-2">
        <i class="bi bi-hospital-fill fs-4" style="color:var(--emr-primary)"></i>
        <div>
            <h1 class="h3 mb-0">Hospital Settings</h1>
            <small class="text-muted">Branch: <strong>@Model.BranchName</strong></small>
        </div>
    </div>
    <a asp-action="Edit" class="btn btn-primary">
        <i class="bi bi-pencil-square me-1"></i>Edit Settings
    </a>
</div>

@if (Model.Id == 0)
{
    <div class="uf-section mb-3">
        <div class="uf-section-body text-center py-5">
            <i class="bi bi-exclamation-circle fs-1 text-warning d-block mb-3"></i>
            <h5 class="text-muted">No settings configured for this branch yet.</h5>
            <a asp-action="Edit" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle me-1"></i>Configure Now
            </a>
        </div>
    </div>
}
else
{
    <div class="row g-3 mb-3">
        <div class="col-md-6 col-xl-4">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-building me-1"></i>Hospital Name</p>
                <h5 class="mb-0 fw-bold">@(Model.HospitalName ?? "—")</h5>
            </div>
        </div>
        <div class="col-md-6 col-xl-4">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-telephone me-1"></i>Contact Number 1</p>
                <h5 class="mb-0 fw-semibold">@(Model.ContactNumber1 ?? "—")</h5>
            </div>
        </div>
        <div class="col-md-6 col-xl-4">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-telephone me-1"></i>Contact Number 2</p>
                <h5 class="mb-0 fw-semibold">@(Model.ContactNumber2 ?? "—")</h5>
            </div>
        </div>
        <div class="col-md-6 col-xl-8">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-geo-alt me-1"></i>Address</p>
                <p class="mb-0 fw-semibold">@(Model.Address ?? "—")</p>
            </div>
        </div>
        <div class="col-md-6 col-xl-4">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-envelope me-1"></i>Email</p>
                <p class="mb-0 fw-semibold">@(Model.EmailAddress ?? "—")</p>
            </div>
        </div>
        <div class="col-md-6 col-xl-4">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-globe me-1"></i>Website</p>
                @if (!string.IsNullOrWhiteSpace(Model.Website))
                {
                    <a href="@Model.Website" target="_blank" class="fw-semibold">@Model.Website</a>
                }
                else
                {
                    <p class="mb-0 fw-semibold">—</p>
                }
            </div>
        </div>
        <div class="col-md-6 col-xl-4">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-receipt me-1"></i>GST Code</p>
                <p class="mb-0 fw-semibold">@(Model.GSTCode ?? "—")</p>
            </div>
        </div>
        <div class="col-md-6 col-xl-4">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-toggles me-1"></i>Status</p>
                <span class="badge @(Model.IsActive ? "text-bg-success" : "text-bg-secondary") fs-6">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </div>
        </div>
        <div class="col-md-6 col-xl-6">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-box-arrow-in-right me-1"></i>Check-In Time</p>
                <h5 class="mb-0 fw-semibold">@(Model.CheckInTime ?? "—")</h5>
            </div>
        </div>
        <div class="col-md-6 col-xl-6">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-box-arrow-right me-1"></i>Check-Out Time</p>
                <h5 class="mb-0 fw-semibold">@(Model.CheckOutTime ?? "—")</h5>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-clock-history me-1"></i>Created On</p>
                <p class="mb-0 fw-semibold">@Model.CreatedDate.ToString("dd MMM yyyy, HH:mm")</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dashboard-panel h-100">
                <p class="text-muted small mb-1"><i class="bi bi-clock-history me-1"></i>Last Modified</p>
                <p class="mb-0 fw-semibold">@(Model.LastModifiedDate?.ToString("dd MMM yyyy, HH:mm") ?? "—")</p>
            </div>
        </div>
    </div>
}
