@{
    ViewData["Title"] = "IPD";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 fw-bold">Inpatient Department</h1>
        <small class="text-muted">IPD admissions, bed allocation, treatment charting &amp; discharge</small>
    </div>
    <span class="badge text-bg-success fs-6 px-3 py-2">IPD</span>
</div>

<div class="row g-3 mb-4">
    <div class="col-sm-4">
        <div class="stat-card stat-blue">
            <div class="stat-icon"><i class="bi bi-person-plus"></i></div>
            <div>
                <div class="stat-value">0</div>
                <div class="stat-label">Admitted Today</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="stat-card stat-green">
            <div class="stat-icon"><i class="bi bi-hospital"></i></div>
            <div>
                <div class="stat-value">0</div>
                <div class="stat-label">Occupied Beds</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="stat-card stat-red">
            <div class="stat-icon"><i class="bi bi-box-arrow-right"></i></div>
            <div>
                <div class="stat-value">0</div>
                <div class="stat-label">Discharged Today</div>
            </div>
        </div>
    </div>
</div>

<div class="dashboard-panel p-4">
    <div class="text-center py-5">
        <i class="bi bi-hospital2 fs-1 text-success mb-3 d-block"></i>
        <h5 class="fw-bold mb-1">IPD Module</h5>
        <p class="text-muted mb-0">IPD workflows — admissions, bed allocation, treatment charting and discharge — can be built here.</p>
    </div>
</div>
