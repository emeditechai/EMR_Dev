@model EMR.Web.Models.ViewModels.ServiceFormViewModel
@{
    ViewData["Title"] = "Edit Service";
    var serviceTypes = ViewBag.ServiceTypes as List<string> ?? [];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 fw-bold">Edit Service</h1>
        <small class="text-muted">Update service details for current branch</small>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Details" asp-route-id="@Model.ServiceId" class="btn btn-outline-secondary">
            <i class="bi bi-eye me-1"></i>Details
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>
</div>

<div class="dashboard-panel" style="max-width:600px;">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ServiceId" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

        <div class="row g-3">
            <div class="col-sm-6">
                <label asp-for="ItemCode" class="form-label fw-semibold">
                    Item Code <span class="text-danger">*</span>
                </label>
                <input asp-for="ItemCode" class="form-control text-uppercase"
                       maxlength="20" placeholder="e.g. CONS001"
                       oninput="this.value=this.value.toUpperCase()" />
                <span asp-validation-for="ItemCode" class="text-danger small"></span>
                <div class="form-text">Unique per branch. Letters, numbers, hyphens only.</div>
            </div>

            <div class="col-sm-6">
                <label asp-for="ServiceType" class="form-label fw-semibold">
                    Service Type <span class="text-danger">*</span>
                </label>
                <select asp-for="ServiceType" class="form-select">
                    <option value="">-- Select Type --</option>
                    @foreach (var t in serviceTypes)
                    {
                        <option value="@t" selected="@(Model.ServiceType == t ? "selected" : null)">@t</option>
                    }
                </select>
                <span asp-validation-for="ServiceType" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="ItemName" class="form-label fw-semibold">
                    Item Name <span class="text-danger">*</span>
                </label>
                <input asp-for="ItemName" class="form-control"
                       maxlength="150" placeholder="Full service name" />
                <span asp-validation-for="ItemName" class="text-danger small"></span>
            </div>

            <div class="col-sm-6">
                <label asp-for="ItemCharges" class="form-label fw-semibold">
                    Item Charges (â‚¹)
                </label>
                <input asp-for="ItemCharges" class="form-control" type="number"
                       min="0" step="0.01" placeholder="0.00" />
                <span asp-validation-for="ItemCharges" class="text-danger small"></span>
            </div>

            <div class="col-sm-6 d-flex align-items-end pb-2">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                    <label asp-for="IsActive" class="form-check-label fw-semibold">Active</label>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save me-1"></i>Update
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts { @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } }
