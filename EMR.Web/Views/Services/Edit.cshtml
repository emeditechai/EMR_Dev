@model EMR.Web.Models.ViewModels.ServiceFormViewModel
@{
    ViewData["Title"] = "Edit Service";
    var serviceTypes = ViewBag.ServiceTypes as List<string> ?? [];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 fw-bold">Edit Service</h1>
        <small class="text-muted">Update service details for current branch</small>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Details" asp-route-id="@Model.ServiceId" class="btn btn-outline-secondary">
            <i class="bi bi-eye me-1"></i>Details
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>
</div>

<div class="dashboard-panel" style="max-width:680px;">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ServiceId" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

        <!-- Row 1: Item Code | Service Type -->
        <div class="row g-3 mb-3">
            <div class="col-sm-6">
                <label asp-for="ItemCode" class="form-label fw-semibold">
                    Item Code <span class="text-danger">*</span>
                </label>
                <input asp-for="ItemCode" class="form-control text-uppercase font-monospace"
                       maxlength="20" placeholder="e.g. CONS_001"
                       oninput="this.value=this.value.toUpperCase()" />
                <span asp-validation-for="ItemCode" class="text-danger small d-block mt-1"></span>
                <div class="form-text">Alphanumeric, hyphens and underscores. Unique per branch.</div>
            </div>
            <div class="col-sm-6">
                <label asp-for="ServiceType" class="form-label fw-semibold">
                    Service Type <span class="text-danger">*</span>
                </label>
                <select asp-for="ServiceType" class="form-select">
                    <option value="">-- Select Type --</option>
                    @foreach (var t in serviceTypes)
                    {
                        <option value="@t" selected="@(Model.ServiceType == t ? "selected" : null)">@t</option>
                    }
                </select>
                <span asp-validation-for="ServiceType" class="text-danger small d-block mt-1"></span>
            </div>
        </div>

        <!-- Row 2: Item Name (full width) -->
        <div class="mb-3">
            <label asp-for="ItemName" class="form-label fw-semibold">
                Item Name <span class="text-danger">*</span>
            </label>
            <input asp-for="ItemName" class="form-control"
                   maxlength="150" placeholder="Full service / procedure name" />
            <span asp-validation-for="ItemName" class="text-danger small d-block mt-1"></span>
        </div>

        <!-- Row 3: Charges | Active toggle -->
        <div class="row g-3 mb-4">
            <div class="col-sm-6">
                <label asp-for="ItemCharges" class="form-label fw-semibold">Item Charges (₹)</label>
                <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input asp-for="ItemCharges" class="form-control" type="number"
                           min="0" step="0.01" placeholder="0.00" />
                </div>
                <span asp-validation-for="ItemCharges" class="text-danger small d-block mt-1"></span>
            </div>
            <div class="col-sm-6 d-flex align-items-center pt-4">
                <div class="form-check form-switch ms-1">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox"
                           role="switch" style="width:2.5em;height:1.3em;" />
                    <label asp-for="IsActive" class="form-check-label fw-semibold ms-2">Active</label>
                </div>
            </div>
        </div>

        <hr class="mb-3" />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save me-1"></i>Update Service
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts { @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } }
