                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="IPDReport"><i class="bi bi-hospital me-2"></i>IPD Report</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="PatientReport"><i class="bi bi-person-lines-fill me-2"></i>Patient Report</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="BillingReport"><i class="bi bi-receipt me-2"></i>Billing Report</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="PharmacyReport"><i class="bi bi-capsule me-2"></i>Pharmacy Report</a></li>
                            </ul>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2 ms-xl-3 emr-top-actions">
                        <button type="button" class="btn btn-sm emr-icon-btn" title="Fullscreen"><i class="bi bi-fullscreen"></i></button>
                        <button type="button" class="btn btn-sm emr-icon-btn" title="Notifications"><i class="bi bi-bell-fill"></i></button>
                        <span class="emr-branch-pill"><i class="bi bi-building me-2"></i>@User.FindFirst("BranchName")?.Value</span>

                        <div class="dropdown">
                            <button class="btn emr-profile-btn dropdown-toggle" type="button" id="profileMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="emr-avatar">@((User.FindFirst("DisplayName")?.Value ?? "U").Substring(0, 1).ToUpper())</span>
                                <span class="text-start">
                                    <strong>@User.FindFirst("DisplayName")?.Value</strong>
                                    <small>@(User.GetActiveRole() is { Length: > 0 } r ? r : "—")</small>
                                </span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end emr-profile-card" aria-labelledby="profileMenu">
                                <div class="px-3 pt-2 pb-3 border-bottom">
                                    <h5 class="mb-0">@User.FindFirst("DisplayName")?.Value</h5>
                                    <div class="text-muted small">@User.Identity?.Name</div>
                                    <span class="badge bg-primary mt-1">@User.FindFirst("BranchName")?.Value</span>
                                    @if (User.GetActiveRole() is { Length: > 0 } activeRole) {
                                        <div class="text-uppercase fw-semibold small mt-2" style="color:var(--emr-primary)">Active Role</div>
                                        <div class="h5 mb-0">@activeRole</div>
