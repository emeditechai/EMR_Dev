                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-light text-start w-100"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </nav>
    </header>

    @* Toast Container *@
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index:9999">
        @if (TempData["Success"] is string successMessage)
        {
            <div id="appToast" class="toast align-items-center text-bg-success border-0 shadow" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body fs-6">
                        <i class="bi bi-check-circle-fill me-2"></i>@successMessage
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
        @if (TempData["Error"] is string errorMessage)
        {
            <div id="appToast" class="toast align-items-center text-bg-danger border-0 shadow" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body fs-6">
                        <i class="bi bi-x-circle-fill me-2"></i>@errorMessage
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
        @if (TempData["Warning"] is string warningMessage)
        {
            <div id="appToast" class="toast align-items-center text-bg-warning border-0 shadow" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body fs-6">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>@warningMessage
                    </div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>

    <div class="container-fluid px-3 px-lg-4 py-3 py-lg-4" style="flex:1 0 auto;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="emr-footer">
        <div class="emr-footer-inner">
            <div class="emr-footer-brand">
                <i class="bi bi-hospital-fill me-2"></i>eMedi<span>EMR</span>
            </div>
            <div class="emr-footer-copy">
                &copy; 2026 &mdash; Sponsored &amp; Marketed by <strong>Emeditech Plus</strong>
            </div>
            <div class="emr-footer-links">
                <a href="#" class="emr-footer-link">Privacy Policy</a>
                <span class="emr-footer-divider">|</span>
                <a href="#" class="emr-footer-link">Terms of Service</a>
                <span class="emr-footer-version">v 2.1.5</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Nested submenu: hover on desktop, click on mobile
        document.querySelectorAll('.dropdown-submenu').forEach(function (el) {
            var toggle = el.querySelector('.dropdown-submenu-toggle');
            var menu   = el.querySelector('.dropdown-submenu-menu');
            if (!toggle || !menu) return;

            // Desktop: hover
            el.addEventListener('mouseenter', function () {
                document.querySelectorAll('.dropdown-submenu-menu.show').forEach(function (m) { m.classList.remove('show'); });
                menu.classList.add('show');
            });
            el.addEventListener('mouseleave', function () {
                menu.classList.remove('show');
            });

            // Mobile / click fallback
            toggle.addEventListener('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                var wasOpen = menu.classList.contains('show');
                document.querySelectorAll('.dropdown-submenu-menu.show').forEach(function (m) { m.classList.remove('show'); });
                if (!wasOpen) menu.classList.add('show');
            });
        });

        // Close submenus when parent dropdown closes
        document.querySelectorAll('[data-bs-toggle="dropdown"]').forEach(function (btn) {
            btn.addEventListener('hidden.bs.dropdown', function () {
                document.querySelectorAll('.dropdown-submenu-menu.show').forEach(function (m) { m.classList.remove('show'); });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Auto-show toast on page load
        (function () {
            var el = document.getElementById('appToast');
            if (el) {
                var toast = new bootstrap.Toast(el, { delay: 4000 });
                toast.show();
            }
        })();
    </script>
</body>
</html>
