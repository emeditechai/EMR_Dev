                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="OPD" asp-action="Index"><i class="bi bi-person-vcard me-2"></i>OPD</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="IPD" asp-action="Index"><i class="bi bi-hospital me-2"></i>IPD</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="masterMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-database-fill me-2"></i>Master
                            </a>
                            <ul class="dropdown-menu dropdown-menu-master" aria-labelledby="masterMenu">

                                @* General *@
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-submenu-toggle" href="#">
                                        <i class="bi bi-grid-fill me-2"></i>General
                                        <i class="bi bi-chevron-right ms-auto submenu-arrow"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-submenu-menu">
                                        <li><a class="dropdown-item" asp-controller="Patients" asp-action="Index"><i class="bi bi-person-heart me-2"></i>Patient Master</a></li>
                                        <li><a class="dropdown-item" asp-controller="Doctors" asp-action="Index"><i class="bi bi-heart-pulse-fill me-2"></i>Doctor Master</a></li>
                                        <li><a class="dropdown-item" asp-controller="DoctorSpecialities" asp-action="Index"><i class="bi bi-award-fill me-2"></i>Doctor Speciality Master</a></li>
                                        <li><a class="dropdown-item" asp-controller="Departments" asp-action="Index"><i class="bi bi-building me-2"></i>Department Master</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Countries" asp-action="Index"><i class="bi bi-globe me-2"></i>Country Master</a></li>
                                        <li><a class="dropdown-item" asp-controller="States" asp-action="Index"><i class="bi bi-map me-2"></i>State Master</a></li>
                                        <li><a class="dropdown-item" asp-controller="Districts" asp-action="Index"><i class="bi bi-geo me-2"></i>District Master</a></li>
                                        <li><a class="dropdown-item" asp-controller="Cities" asp-action="Index"><i class="bi bi-buildings me-2"></i>City Master</a></li>
                                        <li><a class="dropdown-item" asp-controller="Areas" asp-action="Index"><i class="bi bi-pin-map me-2"></i>Area Master</a></li>
                                    </ul>
                                </li>

                                @* OPD Master *@
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-submenu-toggle" href="#">
                                        <i class="bi bi-clipboard2-pulse me-2"></i>OPD Master
                                        <i class="bi bi-chevron-right ms-auto submenu-arrow"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-submenu-menu">
                                        <li><a class="dropdown-item" asp-controller="Services" asp-action="Index"><i class="bi bi-clipboard2-check me-2"></i>Service Master</a></li>
                                    </ul>
                                </li>

                                @* IPD Master *@
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-submenu-toggle" href="#">
                                        <i class="bi bi-hospital me-2"></i>IPD Master
                                        <i class="bi bi-chevron-right ms-auto submenu-arrow"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-submenu-menu">
                                        <li><a class="dropdown-item disabled" href="#"><i class="bi bi-layers me-2"></i>Ward Master</a></li>
                                        <li><a class="dropdown-item disabled" href="#"><i class="bi bi-door-open me-2"></i>Room Master</a></li>
                                    </ul>
                                </li>

                                @* Lab Master *@
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-submenu-toggle" href="#">
                                        <i class="bi bi-eyedropper me-2"></i>Lab Master
                                        <i class="bi bi-chevron-right ms-auto submenu-arrow"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-submenu-menu">
                                        <li><a class="dropdown-item disabled" href="#"><i class="bi bi-flask me-2"></i>Test Master</a></li>
                                        <li><a class="dropdown-item disabled" href="#"><i class="bi bi-collection me-2"></i>Test Group</a></li>
                                    </ul>
                                </li>

                                @* Pharmacy Master *@
