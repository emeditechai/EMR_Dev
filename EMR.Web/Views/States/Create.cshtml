@model EMR.Web.Models.ViewModels.StateFormViewModel
@{
    ViewData["Title"] = "Add State";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 m-0">Add State</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back
    </a>
</div>

<div class="card-soft p-4">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="CountryId" class="form-label">Country <span class="text-danger">*</span></label>
                <select asp-for="CountryId" asp-items="Model.Countries" class="form-select">
                    <option value="">-- Select Country --</option>
                </select>
                <span asp-validation-for="CountryId" class="text-danger small"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="StateCode" class="form-label">State Code <span class="text-danger">*</span></label>
                <input asp-for="StateCode" class="form-control text-uppercase" maxlength="10" placeholder="e.g. MH" />
                <span asp-validation-for="StateCode" class="text-danger small"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="StateName" class="form-label">State Name <span class="text-danger">*</span></label>
                <input asp-for="StateName" class="form-control" maxlength="100" placeholder="e.g. Maharashtra" />
                <span asp-validation-for="StateName" class="text-danger small"></span>
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" checked />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i>Save
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts { @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } }
