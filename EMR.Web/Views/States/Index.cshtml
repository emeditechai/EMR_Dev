@model IEnumerable<EMR.Web.Models.Entities.StateMaster>
@{
    ViewData["Title"] = "State Master";
    var countries = ViewBag.Countries as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new();
    int? selCountry = ViewBag.SelectedCountryId;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 m-0">State Master</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Add State
    </a>
</div>

@* Filter Panel *@
<div class="card-soft p-3 mb-3">
    <form method="get" asp-action="Index" id="filterForm">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="form-label small text-muted mb-1"><i class="bi bi-globe me-1"></i>Country</label>
                <select id="fCountry" name="countryId">
                    <option value="">All Countries</option>
                    @foreach (var c in countries)
                    {
                        if (c.Selected)
                        {
                            <option value="@c.Value" selected="selected">@c.Text</option>
                        }
                        else
                        {
                            <option value="@c.Value">@c.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-auto d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-funnel me-1"></i>Filter
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
            @if (selCountry.HasValue)
            {
                <div class="col-md-auto">
                    <span class="badge text-bg-info py-2 px-3">
                        <i class="bi bi-table me-1"></i>@Model.Count() record(s)
                    </span>
                </div>
            }
        </div>
    </form>
</div>

<div class="card-soft p-3 table-responsive">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Code</th>
                <th>State Name</th>
                <th>Country</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td><code>@item.StateCode</code></td>
                    <td>@item.StateName</td>
                    <td>@(item.Country?.CountryName ?? "â€”")</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge text-bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge text-bg-secondary">Inactive</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.StateId" class="btn btn-sm btn-outline-secondary me-1" title="Details">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.StateId" class="btn btn-sm btn-outline-primary" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr><td colspan="6" class="text-center text-muted py-4">No states found.</td></tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.bootstrap5.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>
    <script>
        new TomSelect('#fCountry', {
            placeholder: 'Search country...',
            allowEmptyOption: true,
            onChange: function () { document.getElementById('filterForm').submit(); }
        });
    </script>
}
