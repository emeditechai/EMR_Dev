@model EMR.Web.Models.ViewModels.UserDetailsViewModel
@{
    ViewData["Title"] = "User Details";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div class="d-flex align-items-center gap-2">
        <i class="bi bi-person-badge-fill fs-4" style="color:var(--emr-primary)"></i>
        <h1 class="h3 mb-0">User Details</h1>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>


<div class="uf-section mb-3">
    <div class="uf-section-header"><i class="bi bi-shield-lock-fill me-2"></i>Account Information</div>
    <div class="uf-section-body">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="detail-field">
                    <div class="detail-label"><i class="bi bi-person me-1"></i>Username</div>
                    <div class="detail-value">@Model.Username</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-field">
                    <div class="detail-label"><i class="bi bi-envelope me-1"></i>Email</div>
                    <div class="detail-value">@(Model.Email ?? "—")</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-field">
                    <div class="detail-label"><i class="bi bi-layout-text-sidebar me-1"></i>First Name</div>
                    <div class="detail-value">@(string.IsNullOrWhiteSpace(Model.FirstName) ? "—" : Model.FirstName)</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-field">
                    <div class="detail-label"><i class="bi bi-layout-text-sidebar me-1"></i>Last Name</div>
                    <div class="detail-value">@(string.IsNullOrWhiteSpace(Model.LastName) ? "—" : Model.LastName)</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-field">
                    <div class="detail-label"><i class="bi bi-telephone me-1"></i>Phone Number</div>
                    <div class="detail-value">@(Model.PhoneNumber ?? "—")</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-field">
                    <div class="detail-label"><i class="bi bi-toggles me-1"></i>Status</div>
                    <div class="detail-value">
                        <span class="badge @(Model.IsActive ? "text-bg-success" : "text-bg-secondary") fs-6">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                        @if (Model.IsLockedOut)
                        {
                            <span class="badge text-bg-danger ms-1 fs-6"><i class="bi bi-lock-fill me-1"></i>Locked</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="uf-section mb-3">
    <div class="uf-section-header"><i class="bi bi-clock-history me-2"></i>Activity</div>
    <div class="uf-section-body">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="detail-field">
                    <div class="detail-label">Last Login</div>
                    <div class="detail-value">@(Model.LastLoginDate?.ToString("dd MMM yyyy, HH:mm") ?? "Never")</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="detail-field">
                    <div class="detail-label">Created On</div>
                    <div class="detail-value">@Model.CreatedDate.ToString("dd MMM yyyy, HH:mm")</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="detail-field">
                    <div class="detail-label">Last Modified</div>
                    <div class="detail-value">@(Model.LastModifiedDate?.ToString("dd MMM yyyy, HH:mm") ?? "—")</div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="uf-section mb-3">
    <div class="uf-section-header"><i class="bi bi-diagram-3-fill me-2"></i>Branch & Role Mappings</div>
    <div class="uf-section-body">
        @if (!Model.BranchRoleMappings.Any())
        {
            <div class="text-muted">No branch mappings found.</div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var mapping in Model.BranchRoleMappings)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="branch-role-card">
                            <div class="branch-role-card-header">
                                <i class="bi bi-building me-2"></i>@mapping.BranchName
                            </div>
                            <div class="branch-role-card-body">
                                @if (!mapping.Roles.Any())
                                {
                                    <span class="text-muted small">No roles assigned</span>
                                }
                                else
                                {
                                    @foreach (var role in mapping.Roles)
                                    {
                                        <span class="badge text-bg-primary me-1 mb-1">@role</span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
.detail-field {
    background: #f8faff;
    border: 1px solid #e8eef8;
    border-radius: 8px;
    padding: 0.7rem 0.9rem;
}
.detail-label {
    font-size: 0.78rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #7a8aaa;
    margin-bottom: 0.25rem;
}
.detail-value {
    font-size: 0.97rem;
    color: #1e2a3b;
    font-weight: 500;
}
.branch-role-card {
    border: 1px solid #d8e4f5;
    border-radius: 10px;
    overflow: hidden;
}
.branch-role-card-header {
    background: linear-gradient(90deg, #f0f4ff 0%, #eaf2ff 100%);
    border-bottom: 1px solid #d8e4f5;
    color: var(--emr-primary, #1f3b91);
    font-weight: 700;
    font-size: 0.88rem;
    padding: 0.5rem 0.8rem;
}
.branch-role-card-body {
    padding: 0.65rem 0.8rem;
    background: #fff;
    min-height: 44px;
}
</style>
