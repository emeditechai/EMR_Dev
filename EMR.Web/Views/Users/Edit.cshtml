@model EMR.Web.Models.ViewModels.UserFormViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="d-flex align-items-center mb-4">
    <i class="bi bi-pencil-square fs-4 me-2" style="color:var(--emr-primary)"></i>
    <h1 class="h3 mb-0">Edit User</h1>
</div>

<form asp-action="Edit" method="post" novalidate enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
    <partial name="_Form" model="Model" />
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-check-lg me-1"></i>Update
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-x-lg me-1"></i>Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
