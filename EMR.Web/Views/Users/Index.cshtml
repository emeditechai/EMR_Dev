@model IEnumerable<EMR.Web.Models.ViewModels.UserListItemViewModel>
@{
    ViewData["Title"] = "User Master";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-0">User Master</h1>
        @if (ViewBag.BranchName is string bn)
        {
            <small class="text-muted"><i class="bi bi-building me-1"></i>Showing users for branch: <strong>@bn</strong></small>
        }
    </div>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus-fill me-1"></i>Add User</a>
</div>

<div class="card-soft p-3 table-responsive">
    <table class="table table-hover align-middle mb-0">
        <thead>
            <tr>
                <th>Username</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Branches</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Username</td>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.Branches</td>
                    <td>
                        <span class="badge @(item.IsActive ? "text-bg-success" : "text-bg-secondary")">
                            @(item.IsActive ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="View"><i class="bi bi-eye-fill"></i></a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <form asp-action="ToggleStatus" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-warning">Toggle</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
